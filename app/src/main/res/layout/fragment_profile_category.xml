<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileCategoryFragment">

    <Spinner
        android:id="@+id/spinnercat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_border2"
        android:popupBackground="@color/Peru"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/radiogroup"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>


    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnercat"
        android:text="Please select any category !!"/>

    <LinearLayout
        android:id="@+id/rootcontainer1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/textView26"
        android:orientation="vertical"
        android:background="@color/Gray">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/White"
            android:layout_margin="5dp">


            <LinearLayout
                android:id="@+id/rootcontainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/button6"
                android:layout_below="@+id/textView26"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">


            </LinearLayout>

        </ScrollView>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_below="@+id/rootcontainer1"
        android:weightSum="2">
        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@drawable/my_button"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/my_button"
            android:text="Update" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>