<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProvidcheckFragment">

    <TextView
        android:id="@+id/textmain1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register as Participants"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please select Category for getting notification"
        android:textColor="@color/Red"
        android:textSize="19sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/textmain1"/>


    <Spinner
        android:id="@+id/spinnercateg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/spinner_border"
        android:popupBackground="#d44284"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textmain"/>

    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnercateg"
        android:text="Please select any category !!"/>


    <LinearLayout
        android:id="@+id/rootcontainer1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/textView26"
        android:orientation="vertical"
        android:background="@color/Gray">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/White"
            android:layout_margin="5dp">


            <LinearLayout
                android:id="@+id/rootcontainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/button6"
                android:layout_below="@+id/textView26"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">


            </LinearLayout>

        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:layout_below="@+id/rootcontainer1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="2">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button"
                android:text="Register"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_marginRight="2sp"
                android:textColor="@color/black" />


            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button"
                android:text="Cancel"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="@color/black" />


    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />


</RelativeLayout>