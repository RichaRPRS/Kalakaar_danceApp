<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#9c9797"
    android:padding="10dp">

    <Spinner
        android:id="@+id/spinnercateg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/spinner_border"
        android:popupBackground="#d44284"
        android:layout_marginTop="2dp" />

    <Spinner
        android:id="@+id/spinnersubcat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/spinner_border"
        android:popupBackground="#d44284"
        android:layout_below="@+id/spinnercateg"/>

    <Spinner
        android:id="@+id/spinnercountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_border"
        android:popupBackground="#d44284"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/spinnersubcat" />

    <Spinner
        android:id="@+id/spinnerstat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnercountry"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:popupBackground="#d44284"
        android:background="@drawable/spinner_border" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

