            <LinearLayout
                android:id="@+id/linear7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/btncheck"
                android:layout_marginTop="5dp"
                android:weightSum="2">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="State "
                android:layout_gravity="center"
                android:textSize="18dp"
                android:textColor="@color/Red"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/spinnerstate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_border"
                android:popupBackground="@color/Peru"
                android:layout_weight="1"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linear7"
                android:layout_marginTop="5dp"
                android:weightSum="2">
            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="City "
                android:textSize="18dp"
                android:textColor="@color/Red"
                android:layout_weight="1"/>
            <Spinner
                android:id="@+id/spinnercity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_border"
                android:popupBackground="@color/Peru"
                android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linear8"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Password "
                    android:textSize="18dp"
                    android:textColor="@color/Red"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/editpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/linear51"
                android:layout_below="@+id/linear51"
                android:text="Show"
                android:textSize="18sp"
                android:textColor="#080808"
                android:buttonTint="#E5226C"
                android:textStyle="bold"/>
